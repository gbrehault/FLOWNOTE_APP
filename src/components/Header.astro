---
import { Github, Instagram, Globe } from "lucide-astro";
---

<header class="w-full">
  <main
    class="flex justify-between items-center p-4 bg-background-light rounded-2xl m-4 shadow-md"
  >
    <div class="w-1/4 flex items-center">
      <img
        src="/img/Logo-FlowNote-RVB.png"
        alt="Flownote Logo"
        height="45"
        width="215"
      />
    </div>
    <div class="w-1/2 flex justify-center gap-[50px] items-center">
      <a
        href="/"
        class="inline-block px-10 py-2 bg-texte text-background-dark rounded-md font-bold hover:bg-black hover:text-background-dark transition-colors"
        >Accueil</a
      >
      <a
        href="/"
        class="inline-block px-10 py-2 bg-bandlight text-texte rounded-md font-bold hover:bg-banddark hover:text-texte transition-colors"
        >Notes</a
      >
      <a
        href="/"
        class="inline-block px-10 py-2 bg-secondary text-texte rounded-md font-bold hover:bg-secondary-dark hover:text-texte transition-colors"
        >Ajouter</a
      >
      <a
        href="/"
        class="inline-block px-10 py-2 bg-primary-dark text-texte rounded-md font-bold hover:bg-primary hover:text-texte transition-colors"
        >Ã€ propos</a
      >
    </div>
    <div class="w-1/4 flex justify-end">
      <Globe
        class="w-8 h-8 text-bandlight mx-2 hover:text-banddark transition-colors cursor-pointer"
      />
      <Instagram
        class="w-8 h-8 text-secondary-dark mx-2 hover:text-secondary transition-colors cursor-pointer"
      />
      <Github
        class="w-8 h-8 text-primary-dark mx-2 hover:text-primary transition-colors cursor-pointer"
      />
    </div>
  </main>
</header>
